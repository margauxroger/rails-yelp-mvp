<div class="container mt-5">
  <h1>Welcome to your Foodie</h1>
  <p class="mt-3">All your favorites restaurants in one place! </p>
  <% @restaurants.each do |resto| %>
    <li><%= link_to(resto.name, restaurant_path(resto)) %></li>
  <% end %>
  <div class="mt-4 pt-3 border-top">
    <%= link_to('Add a new restaurant!', new_restaurant_path, {class: "btn btn-success"}) %>
  </div>
</div>

